#Create Musician class
#Define shortcut w __init__ to make sure instances contain sound attributE

class Musician(object):
    def __init__(self, sounds):
        self.sounds = sounds
        
    def solo(self, length):
        for i in range(length):
            print(self.sounds[i % len(self.sounds)], end= " ") #used to make sure no error message since we call for 6 len, but only have 3 sounds
            
class Bassist(Musician): #Musician is parent of Bassist
    def__init__(self):
        #call the __init__ method of the parent class
        super().__init__(["Twang", "Thrumb", "Bling"])
        
class Guitarist(Musician):
    def__init__(self):
        super().__init__(["Boink", "Bow", "Boom"])
        
    def tune(self):
        print("Be with you in a moment")
        print("Twoning, sproing, splang")

class Drummer(Musician):
    def__init__(self):
        super().__init__(["Blam", "Thrumb", "Zing"])

    def solo(self, length):
        for i in range(length):
            print(self.sounds[i % len(self.sounds)], end=" ")

    def count():
        for n in range(1,5):
            print(n)
    
    def combust(self):
        print("BOOM"!)
        
class Band(Musician):
    def hire()
        print(Guitarist().name, "You're hired!")
    def fire()
        print(Bassist().name, "You're hired!")

def set():
    Drummer.count()
    Guitarist.solo(6)
    Bassist.solo(8)
    Drummer.combust()

if __name__ == "__main__":
    set()

        